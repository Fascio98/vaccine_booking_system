<div class="card">
  <div class="card_body">
    <div class="row">
      <div class="col">
        <h1><%= I18n.t('admin.bookings.notices.list.header') %> </h1>
        <table class="table table-striped">
          <thead>
          <tr>
            <th><%= I18n.t('admin.vaccinesitems.notices.list.name') %></th>
            <th><%= I18n.t('admin.bookings.notices.list.guid') %></th>
            <th><%= I18n.t('admin.patients.notices.list.pin') %></th>
            <th><%= I18n.t('admin.bookings.notices.list.step_state') %></th>
            <th><%= I18n.t('admin.bookings.notices.list.created_at') %></th>
            <th><%= I18n.t('admin.bookings.notices.list.ip_address') %></th>
            <th><%= I18n.t('admin.bookings.notices.list.browser_name') %></th>
            <th><%= I18n.t('admin.bookings.notices.list.os_name') %></th>
          </tr>
          </thead>

          <tbody>
          <% @bookings.each do |booking| %>
            <tr>
              <td class="align-middle"><%= vaccine_name(booking&.vaccine_id) %></td>
              <td class="align-middle"><%= booking.guid %></td>
              <td class="align-middle"><%= link_to patient_pin(booking&.patient_id), admin_patient_path(booking.patient_id) %></td>
              <td class="align-middle"><%= booking.step_state %></td>
              <td class="align-middle"><%= booking.created_at %></td>
              <td class="align-middle"><%= booking.ip_address  %></td>
              <td class="align-middle"><%= booking.browser_name %></td>
              <td class="align-middle"><%= booking.os_name %></td>
            </tr>
          <% end %>
          </tbody>

        </table>


        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>