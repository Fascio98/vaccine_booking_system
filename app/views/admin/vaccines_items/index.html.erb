<div class="row">
  <p id="notice"><%= notice %></p>

  <div class="col">
    <%= link_to 'New Vaccine', new_admin_vaccines_item_path, class: 'btn btn-success' %>
  </div>
</div>

<br/>

<div class="card">
  <div class="card_body">
    <div class="row">
      <div class="col">
        <h1><%= I18n.t('admin.vaccinesitems.notices.list.header') %> </h1>
        <table class="table table-striped">
          <thead>
          <tr>
            <th><%= I18n.t('admin.vaccinesitems.notices.list.name') %></th>
            <th><%= I18n.t('admin.vaccinesitems.notices.list.active') %></th>
            <th><%= I18n.t('admin.vaccinesitems.notices.list.description') %></th>
          </tr>
          </thead>

          <tbody>
          <% @vaccines.each do |vaccine| %>
            <tr>
              <td class="align-middle"><%= vaccine.name %></td>
              <td class="align-middle"><%= vaccine.active %></td>
              <td class="align-middle"><%= vaccine.description %></td>
              <td class="align-middle"><%= link_to 'Edit', edit_admin_vaccines_item_path(vaccine) %></td>
              <td class="align-middle"><%= link_to 'Destroy', [:admin,vaccine], method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>