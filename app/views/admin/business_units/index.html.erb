<div class="row">
  <p id="notice"><%= notice %></p>

  <div class="col">
    <%= link_to 'New Business Unit', new_admin_business_unit_path, class: 'btn btn-success' %>
  </div>
</div>

<br/>

<div class="card">
  <div class="card_body">
    <div class="row">
      <div class="col">
        <h1><%= I18n.t('admin.business_units.notices.list.header') %> </h1>
        <table class="table table-striped">
          <thead>
          <tr>
            <th><%= I18n.t('admin.business_units.notices.list.country') %></th>
            <th><%= I18n.t('admin.business_units.notices.list.city') %></th>
            <th><%= I18n.t('admin.business_units.notices.list.district') %></th>
            <th><%= I18n.t('admin.business_units.notices.list.name') %></th>
            <th><%= I18n.t('admin.business_units.notices.list.code') %></th>
            <th><%= I18n.t('admin.business_units.notices.list.active') %></th>
            <th><%= I18n.t('admin.business_units.notices.list.created_at') %></th>
            <th><%= I18n.t('admin.business_units.notices.list.updated_at') %></th>
          </tr>
          </thead>

          <tbody>
          <% @business_units.each do |business_unit| %>
            <tr>
              <td class="align-middle"><%= business_unit.country.name %></td>
              <td class="align-middle"><%= business_unit.city.name %></td>
              <td class="align-middle"><%= business_unit.district.name %></td>
              <td class="align-middle"><%= business_unit.name %></td>
              <td class="align-middle"><%= business_unit.code %></td>
              <td class="align-middle"><%= business_unit.active %></td>
              <td class="align-middle"><%= business_unit.created_at %></td>
              <td class="align-middle"><%= business_unit.updated_at %></td>
              <td class="align-middle"><%= link_to 'Edit', edit_admin_business_unit_path(business_unit) %></td>
              <td class="align-middle"><%= link_to 'Destroy', [:admin,business_unit], method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>