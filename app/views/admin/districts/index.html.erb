<div class="row">
  <p id="notice"><%= notice %></p>

  <div class="col">
    <%= link_to 'New District', new_admin_district_path, class: 'btn btn-success' %>
  </div>
</div>

<br/>

<div class="card">
  <div class="card_body">
    <div class="row">
      <div class="col">
        <h1><%= I18n.t('admin.districts.notices.list.header') %> </h1>
        <table class="table table-striped">
          <thead>
          <tr>
            <th><%= I18n.t('admin.districts.notices.list.city') %></th>
            <th><%= I18n.t('admin.districts.notices.list.name') %></th>
            <th><%= I18n.t('admin.districts.notices.list.code') %></th>
            <th><%= I18n.t('admin.districts.notices.list.active') %></th>
          </tr>
          </thead>

          <tbody>
          <% @districts.each do |district| %>
            <tr>
              <td class="align-middle"><%= district.city.name %></td>
              <td class="align-middle"><%= district.name %></td>
              <td class="align-middle"><%= district.code %></td>
              <td class="align-middle"><%= district.active %></td>
              <td class="align-middle"><%= link_to 'Edit', edit_admin_district_path(district) %></td>
              <td class="align-middle"><%= link_to 'Destroy', [:admin,district], method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>