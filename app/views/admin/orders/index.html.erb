<div class="row">
  <p id="notice"><%= notice %></p>
</div>

<br/>

<div class="card">
  <div class="card_body">
    <div class="row">
      <div class="col">
        <h1><%= I18n.t('admin.orders.notices.header') %> </h1>
        <table class="table table-striped">
          <thead>
          <tr>
            <th><%= I18n.t('admin.orders.notices.list.business_unit') %></th>
            <th><%= I18n.t('admin.orders.notices.list.patient_first_name') %></th>
            <th><%= I18n.t('admin.orders.notices.list.patient_last_name') %></th>
            <th><%= I18n.t('admin.orders.notices.list.order_code') %></th>
            <th><%= I18n.t('admin.orders.notices.list.order_date') %></th>
            <th><%= I18n.t('admin.orders.notices.list.finished') %></th>
            <th><%= I18n.t('admin.orders.notices.list.created_at') %></th>
            <th><%= I18n.t('admin.orders.notices.list.updated_at') %></th>
          </tr>
          </thead>

          <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="align-middle"><%= order.business_unit_slot.business_unit.name %></td>
              <td class="align-middle"><%= order.patient.first_name%></td>
              <td class="align-middle"><%= order.patient.last_name%></td>
              <td class="align-middle"><%= order.order_code %></td>
              <td class="align-middle"><%= order.order_date %></td>
              <td class="align-middle"><%= order.finished %></td>
              <td class="align-middle"><%= order.created_at %></td>
              <td class="align-middle"><%= order.updated_at %></td>
            </tr>
          <% end %>
          </tbody>
        </table>

        <%== pagy_bootstrap_nav(@pagy) %>
      </div>
    </div>
  </div>
</div>